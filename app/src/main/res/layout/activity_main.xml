<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="532dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_id"
            android:layout_width="262dp"
            android:layout_height="225dp"
            android:gravity="bottom"
            android:text="@string/calc"
            android:textAlignment="textEnd"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"


            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/num9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="9"
            app:layout_constraintBottom_toTopOf="@+id/num6"
            app:layout_constraintStart_toEndOf="@+id/num7" />

        <Button
            android:id="@+id/num8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="8"
            app:layout_constraintBottom_toTopOf="@+id/num4"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/num7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="7"
            app:layout_constraintBottom_toTopOf="@+id/num5"
            app:layout_constraintStart_toEndOf="@+id/num8" />

        <Button
            android:id="@+id/num6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="6"
            app:layout_constraintBottom_toTopOf="@+id/num3"
            app:layout_constraintStart_toEndOf="@+id/num5" />

        <Button
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:text="5"
            app:layout_constraintBottom_toTopOf="@+id/num2"
            app:layout_constraintStart_toEndOf="@+id/num4" />

        <Button
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="4"
            app:layout_constraintBottom_toTopOf="@+id/num1"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="3"
            app:layout_constraintBottom_toTopOf="@+id/num0"
            app:layout_constraintStart_toEndOf="@+id/num2" />

        <Button
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2"
            app:layout_constraintBottom_toTopOf="@+id/num0"
            app:layout_constraintStart_toEndOf="@+id/num1" />

        <Button
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:text="1"
            app:layout_constraintBottom_toTopOf="@+id/num0"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/num0"
            android:layout_width="263dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="7dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/add"
            android:layout_width="88dp"
            android:layout_height="177dp"
            android:layout_gravity="center"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="108dp"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/minus"
            android:layout_width="89dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="1dp"
            android:text="-"
            app:layout_constraintBottom_toTopOf="@+id/multiply"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/div"
            android:layout_width="89dp"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:layout_marginEnd="13dp"
            android:text="/"
            app:layout_constraintBottom_toTopOf="@+id/minus"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/equals"
            android:layout_width="90dp"
            android:layout_height="108dp"
            android:layout_gravity="center"
            android:layout_marginEnd="11dp"
            android:text="="
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="89dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="2dp"
            android:text="*"
            app:layout_constraintBottom_toTopOf="@+id/add"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/del"
            android:layout_width="89dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:text="del"
            app:layout_constraintBottom_toTopOf="@+id/num8"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/clear"
            android:layout_width="89dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:text="clear"

            app:layout_constraintBottom_toTopOf="@+id/num7"
            app:layout_constraintStart_toEndOf="@+id/del"
            app:layout_constraintTop_toBottomOf="@+id/text_view_id"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>